{
    "etcd": {
        "endpoints": [
            "http://127.0.0.1:2379"
        ],
        "prefix": "/containerpilot"
    },
    "logging": {
        "level": "INFO",
        "format": "default",
        "output": "stdout"
    },
    "services": [
        {
            "name": "kafka-pixy",
            "port": 19092,
            "health": [
                "/usr/bin/curl", "--fail", "-s", "http://localhost:19092"
            ],
            "poll": 10,
            "ttl": 30,
            "timeout": "10s",
            "tags": ["kafka", "rest", "api"]
        }
    ],
    "backends": [
    {
      "name": "kafka",
      "poll": 30,
      "onChange": "/bin/true",
      "timeout": "30s"
    },
    {
      "name": "zookeeper",
      "poll": 30,
      "onChange": "/bin/true",
      "timeout": "30s"
    }
  ],
    "coprocesses": [
        {
            "name": "etcd-proxy",
            "command": ["etcd",
                        "--proxy", "on",
                        "--listen-client-urls", "http://127.0.0.1:4001,http://127.0.0.1:2379",
                        "--initial-cluster", "etcd0=http://etcd:2380"],
            "restarts": "unlimited"
        }
    ]
}
